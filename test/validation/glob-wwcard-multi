#!/bin/bash

set -e
set -x

mkdir 'pushed' 'pulled'

mktree -p 'pushed' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/b 040755 19990101 19990101
root/a/b/c 040755 19990101 19990101
root/a/b/c/x 0100644 19990101 19990101 < a/b/c/x\n
root/a/b/x 0100644 19990101 19990101 < a/b/x\n
root/a/x 0100644 19990101 19990101 < a/x\n
EOF

synctl init 'server'

synctl push --server='file://server' --root='pushed/root' \
            --exclude='/a/**/x'

synctl pull --server='file://server' --root='pulled/root'

chktree -p 'pulled' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/b 040755 19990101 19990101
root/a/b/c 040755 19990101 19990101
EOF
