#!/bin/bash

set -e
set -x

mkdir 'pushed' 'pulled'

mktree -p 'pushed' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/x 0100644 19990101 19990101 < x\n
root/a/y 0100644 19990101 19990101 < y\n
root/a/b 040755 19990101 19990101
root/a/b/x 0100644 19990101 19990101 < x\n
root/a/b/y 0100644 19990101 19990101 < y\n
EOF

synctl init 'server'

synctl push --server='file://server' --root='pushed/root'

synctl pull --server='file://server' --root='pulled/root' \
            --exclude='/*/x' --exclude='*/y'

chktree -p 'pulled' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/b 040755 19990101 19990101
root/a/b/x 0100644 19990101 19990101 < x\n
EOF
