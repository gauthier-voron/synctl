#!/bin/bash

set -e
set -x

mkdir 'pushed' 'pulled'

mktree -p 'pushed' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/a 0100644 19990101 19990101 < a/a\n
root/a/b 0100644 19990101 19990101 < a/b\n
root/b 0100644 19990101 19990101 < b\n
root/c 0100644 19990101 19990101 < c\n
EOF

synctl init 'server'

synctl push --server='file://server' --root='pushed/root' \
            --exclude='/a/a' --include='/a/*' --include='/a' --exclude='/*'

synctl pull --server='file://server' --root='pulled/root'

chktree -p 'pulled' <<EOF
root 04**** * *
root/a 040755 19990101 19990101
root/a/b 0100644 19990101 19990101 < a/b\n
EOF
